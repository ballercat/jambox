{
  "include": ["src/**/*"],
  "exclude": ["src/**/__tests__/*", "src/**/__mocks__/*"],
  "compilerOptions": {
    "target": "ES2017",
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "declarationMap": true,
    "moduleResolution": "NodeNext",
    "sourceMap": false
  },
  "typeAcquisition": {
    "enable": true,
    "include": ["src/types.ts"]
  }
}
