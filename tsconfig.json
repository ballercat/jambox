{
  "include": ["src/**/*", "cypress.config.ts", "jambox.config.js"],
  "exclude": ["src/**/__tests__/*", "src/**/__mocks__/*"],
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "declarationMap": true,
    "moduleResolution": "NodeNext",
    "sourceMap": false
  },
  "typeAcquisition": {
    "enable": true,
    "include": ["src/index.ts"]
  },
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "ES2022"
    }
  }
}
